@page
@model TurisManager.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username">Nome de Usuário</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Senha</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    form {
        max-width: 350px;
        margin: 40px auto;
        padding: 32px 24px 24px 24px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.07);
    }

    h1 {
        text-align: center;
        margin-bottom: 24px;
        font-weight: 600;
        color: #222;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 500;
        color: #333;
        margin-bottom: 6px;
        display: block;
    }

    input.form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        background: #f9fafb;
        transition: border-color 0.2s;
        font-size: 1rem;
    }

        input.form-control:focus {
            border-color: #2563eb;
            outline: none;
            background: #fff;
        }

    button.btn-primary {
        width: 100%;
        padding: 10px 0;
        background: #2563eb;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        font-size: 1.05rem;
        transition: background 0.2s;
        margin-top: 8px;
    }

        button.btn-primary:hover {
            background: #1d4ed8;
            cursor: pointer;
        }

    .text-danger {
        color: #dc2626;
        font-size: 0.95em;
    }
</style>