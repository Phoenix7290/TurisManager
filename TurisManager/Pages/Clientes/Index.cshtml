@page
@model TurisManager.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Lista de Clientes</h1>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
            </tr>
        }
    </tbody>
</table>

<style>
    h1 {
        text-align: center;
        margin: 30px 0 20px;
        font-weight: 600;
        color: #222;
    }

    table.table {
        width: 90%;
        max-width: 900px;
        margin: 0 auto;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 16px rgba(0, 0, 0, 0.05);
        background: #fff;
    }

    thead {
        background-color: #2563eb;
        color: white;
    }

    th, td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
    }

    tr:hover {
        background-color: #f3f4f6;
    }

    th:first-child, td:first-child {
        border-left: none;
    }

    th:last-child, td:last-child {
        border-right: none;
    }
</style>